<div class="container">
  <div class="panel-group">
    <div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <%= render partial: "shared/flash_messages", flash: flash %>
        <% button = { text: 'Event Registration', path: view_path(id: @event.id)} %>
        <div id="event"><%= render partial: 'events/event', locals: { event: @event, button: button } %></div>
        <div id="hashers">
          <table id="hasher_table" class="table table-striped">
            <caption class="visible-caption" ><strong>Registered Hashers:</strong></caption>
            <thead id="hasher_table_head">
            <tr>
              <th>Name</th>
              <th>Kennel</th>
            </tr>
            </thead>
            <tbody id="hasher_list">
            <% @hashers.each do |hasher| %>
                <tr>
                  <td class="name"><%= hasher.name %></td>
                  <td class="kennel"><%= hasher.kennel %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel-footer"></div>
      <div id="common_footer" class="col-md-2 col-md-offset-10">
        <% if @event.hash_kennel.facebook_url %>
            <a id="facebook_link" href="<%= @event.hash_kennel.facebook_url %>">
              <%= image_tag('/images/facebookbutton.png', {alt: 'Facebook', class: 'img-responsive', id: 'facebook_button'}) %>
            </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
