<div class="container">
  <div class="panel-group">
    <div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <%= render partial: "shared/flash_messages", flash: flash %>
        <% button = { text: 'Registration List', path: whosecoming_path(id: @event.id)} %>
        <div id="event"><%= render partial: 'events/event', locals: { event: @event, button: button } %></div>
        <% if @event.rego_allowed? %>
            <div id="rego"><%= render partial: 'events/rego', locals: { event: @event, public_key: @public_key } %></div>
        <% end %>
      </div>
      <div class="panel-footer"></div>
      <div id="common_footer" class="col-md-2 col-md-offset-10">
        <% if @event.hash_kennel.facebook_url %>
            <a id="facebook_link" href="<%= @event.hash_kennel.facebook_url %>">
              <%= image_tag('/images/facebookbutton.png', {alt: 'Facebook', class: 'img-responsive', id: 'facebook_button'}) %>
            </a>
        <% end %>
      </div>
    </div>
  </div>
</div>