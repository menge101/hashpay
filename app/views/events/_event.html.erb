<div class="row">
  <div class="col-md-6" id="eventData">
    <dl class="dl-horizontal">
      <% index = nil unless index %>
      <dt id=<%= event_view_id_determiner('What', index) %> >What?</dt>
      <dd id=<%= event_view_id_determiner('Name', index) %> ><%= event[:name] %></dd>
      <dd id=<%= event_view_id_determiner('Description', index) %> ><%= event[:description] %></dd>
      <dt id=<%= event_view_id_determiner('When', index) %> >When?</dt>
      <dd id=<%= event_view_id_determiner('Date', index) %> ><%= event[:date].strftime('%A, %b %d %I:%M:%S %p') %></dd>
      <dt id=<%= event_view_id_determiner('Where', index) %> >Where?</dt>
      <dd id=<%= event_view_id_determiner('Location', index) %> ><%= event[:location] %></dd>
      <dt id=<%= event_view_id_determiner('How', index) %> >How Much?</dt>
      <dd id=<%= event_view_id_determiner('Cost', index) %> ><%= "#{event.stringify_cost}/person" %></dd>
    </dl>
    <% if button && event.rego_allowed? %>
      <%= link_to button[:path], { method: :get } do %>
        <button id="event_nav_btn" type="button" class="stripe-button-clone col-md-4 col-md-offset-3">
          <span style="display: block; min-height: 30px;"><%= button[:text] %></span>
        </button>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6" id="map-canvas">
    <div class='embed-container'>
      <iframe  id="map" width='200' height='200' frameborder='0' style='border:0' allowfullscreen='true'
              src='https://www.google.com/maps/embed/v1/place?q=<%= CGI.escape(event[:location]) %>&key=<%= Rails.application.secrets.google_maps_public_api_key %>'>
      </iframe>
    </div>
  </div>
</div>

