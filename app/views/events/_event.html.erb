<div class="row">
  <div class="col-md-6" id="eventData">
    <dl class="dl-horizontal">
      <dt id="eventWhat">What?</dt>
      <dd id="eventName"><%= event[:name] %></dd>
      <dd id="eventDescription"><%= event[:description] %></dd>
      <dt id="eventWhen">When?</dt>
      <dd id="eventDate"><%= event[:date].strftime('%A, %b %d %I:%M:%S %p') %></dd>
      <dt id="eventWhere">Where?</dt>
      <dd id="eventLocation"><%= event[:location] %></dd>
      <dt id="eventHow">How Much?</dt>
      <dd id="eventCost"><%= "#{event.stringify_cost}/person" %></dd>
    </dl>
    <%= link_to button[:path], { method: :get } do %>
        <button id="event_nav_btn" type="button" class="btn btn-info col-md-4 col-md-offset-3"><%= button[:text] %></button>
    <% end %>
  </div>
  <div class="col-md-6" id="map-canvas">
    <div class='embed-container'>
      <iframe  id="map" width='200' height='200' frameborder='0' style='border:0' allowfullscreen='true'
              src='https://www.google.com/maps/embed/v1/place?q=<%= CGI.escape(event[:location]) %>&key=<%= Rails.application.secrets.google_maps_public_api_key %>'>
      </iframe>
    </div>
  </div>
</div>

